# ============================================================
# E O PIX - Variáveis de Ambiente para PRODUÇÃO
# ============================================================
# Copie este arquivo e preencha os valores reais no Vercel Dashboard
# Nunca commite valores reais de produção!
# ============================================================

# ===== MODO DE OPERAÇÃO =====
NODE_ENV="production"
# MOCK_MODE: true = usa dados fictícios, false = APIs reais
# Manter true até configurar e pagar APIs externas
MOCK_MODE="true"

# ===== URL DO APP =====
# Usando URL padrão da Vercel por enquanto (sem domínio personalizado)
# Trocar para https://eopix.com.br quando configurar domínio próprio
NEXT_PUBLIC_APP_URL="https://eopix.vercel.app"

# ===== DATABASE (Neon - Branch de Produção) =====
# Usar branch "production" do Neon para isolamento
DATABASE_URL="postgresql://user:password@ep-xxx-pooler.region.aws.neon.tech/neondb?sslmode=require"
DIRECT_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# ===== AUTENTICAÇÃO =====
# Gerar com: openssl rand -base64 32
JWT_SECRET="GERAR_SECRET_SEGURO_32_CHARS_MINIMO"
ADMIN_EMAILS="seu-email-admin@gmail.com"

# ===== ASAAS (Pagamentos PIX) =====
# PENDENTE: Criar conta e configurar API
# Dashboard: https://www.asaas.com/
# Por enquanto usando MOCK_MODE=true
ASAAS_ENV="sandbox"
ASAAS_API_KEY=""
ASAAS_WEBHOOK_TOKEN="mock-token"
# Webhook URL (quando tiver domínio): https://eopix.com.br/api/webhooks/asaas
# Eventos: PAYMENT_CONFIRMED, PAYMENT_RECEIVED, PAYMENT_REFUNDED, PAYMENT_OVERDUE

# ===== APIFULL (Consulta CPF/CNPJ e Processos) =====
# Dashboard: https://apifull.io/
# Endpoints usados: ic-cpf-completo, e-boavista, r-acoes-e-processos-judiciais
APIFULL_API_KEY=""

# ===== SERPER (Busca Google) =====
# Dashboard: https://serper.dev/
SERPER_API_KEY=""

# ===== OPENAI (Resumos com IA) =====
# PENDENTE: Criar conta e configurar API
# Dashboard: https://platform.openai.com/
OPENAI_API_KEY=""

# ===== RESEND (Emails Transacionais) =====
# PENDENTE: Criar conta e verificar domínio
# Dashboard: https://resend.com/
RESEND_API_KEY=""
EMAIL_FROM="E O PIX? <noreply@eopix.com.br>"

# ===== CLOUDFLARE TURNSTILE (Captcha) =====
# PENDENTE: Criar widget para domínio
# Dashboard: https://dash.cloudflare.com/ -> Turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=""
TURNSTILE_SECRET_KEY=""

# ===== INNGEST (Background Jobs) =====
# PENDENTE: Criar app de produção
# Dashboard: https://app.inngest.com/
INNGEST_EVENT_KEY=""
INNGEST_SIGNING_KEY=""

# ===== SENTRY (Monitoramento de Erros) - Opcional =====
# Dashboard: https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
SENTRY_AUTH_TOKEN="sntrys_..."

# ===== PLAUSIBLE (Analytics) - Opcional =====
# Dashboard: https://plausible.io/
NEXT_PUBLIC_PLAUSIBLE_DOMAIN="eopix.com.br"

# ===== CONFIGURAÇÃO DE PREÇO =====
PRICE_CENTS="2990"
