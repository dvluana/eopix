// Prisma Schema para E o Pix?
// Database: PostgreSQL (Supabase)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de usuário (identificado apenas por email)
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  purchases Purchase[]
  sessions  Session[]

  @@index([email])
}

// Sessões de autenticação (magic link / código OTP)
model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  code      String? // Código de 6 dígitos
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
}

// Compras/Consultas
model Purchase {
  id              String   @id @default(cuid())
  userId          String
  asaasPaymentId  String?  @unique // ID do pagamento no Asaas
  status          String   @default("pending") // pending, confirmed, completed, expired, failed
  searchTerm      String   // CPF ou CNPJ pesquisado
  searchType      String   // "cpf" ou "cnpj"
  packageType     String   // "single", "pack5", "pack10"
  amount          Float    // Valor em reais
  paidAt          DateTime?
  expiresAt       DateTime // Data de expiração do relatório
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  report Report?

  @@index([userId])
  @@index([searchTerm])
  @@index([status])
}

// Relatórios gerados
model Report {
  id               String   @id @default(cuid())
  purchaseId       String   @unique
  searchTerm       String
  searchType       String
  rawData          Json     // Dados brutos das APIs (APIFull, Escavador, Google)
  processedData    Json     // Dados processados e resumidos
  weatherStatus    String   // "sol", "nuvens", "trovoada"
  riskScore        Float    // 0-100
  summary          String?  // Resumo gerado por IA
  generatedAt      DateTime @default(now())

  purchase Purchase @relation(fields: [purchaseId], references: [id], onDelete: Cascade)

  @@index([searchTerm])
  @@index([weatherStatus])
}

// Leads capturados (consultas sem pagamento)
model Lead {
  id             String   @id @default(cuid())
  email          String?
  searchTerm     String
  searchType     String
  source         String?  // "landing", "teaser", "checkout"
  conversionPath String[] // Caminho de conversão
  createdAt      DateTime @default(now())

  @@index([searchTerm])
  @@index([createdAt])
}

// Rate limiting (simples, sem Redis no MVP)
model RateLimit {
  id         String   @id @default(cuid())
  identifier String   // IP ou user ID
  action     String   // "search", "login", "api"
  count      Int      @default(1)
  windowStart DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, action])
  @@index([identifier, action, windowStart])
}
